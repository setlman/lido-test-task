services:
  node_exporter:
    image: quay.io/prometheus/node-exporter:latest
    container_name: node_exporter
    command:
      - '--path.rootfs=/host'
    volumes:
      - "/:/host:ro,rslave"
    ports:
      - "9100:9100"
    restart: always
    networks:
      - monitoring
    labels:
      prometheus_job: "node"
      prometheus_port: "9100"
      
networks:
  monitoring:
    external: true